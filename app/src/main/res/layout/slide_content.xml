<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00F"
        android:layout_weight="1"
        >


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0F0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF0">
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:background="#F0F">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FAF"
                android:gravity="left"
                android:text="0:00"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#AFF"
                android:gravity="right"
                android:text="0:00"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AAF"
            android:gravity="center"
            >

            <Button
                android:id="@+id/slide_rewind"
                android:background="@mipmap/ic_rewind"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <Button
                android:id="@+id/slide_up_play"
                android:background="@mipmap/ic_play_circle"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/slide_forward"
                android:background="@mipmap/ic_forward"
                android:layout_width="50dp"
                android:layout_height="50dp" />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>
